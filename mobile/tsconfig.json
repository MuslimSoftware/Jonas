{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@/api/*": ["src/api/*"],
      "@/features/*": ["src/features/*"],
      "@/shared/*": ["src/shared/*"],
      "@/constants/*": ["src/shared/constants/*"],
      "@/context/*": ["src/context/*"],
      "@/assets/*": ["src/assets/*"],
      "@/types/*": ["src/shared/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
